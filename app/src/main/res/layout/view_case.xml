<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/separator"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingEnd="32dp"
        android:paddingStart="32dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="@dimen/icon_big"
            android:layout_height="@dimen/icon_big"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:contentPadding="0dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ex_case"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cv"
            android:text="皇家金泽"
            android:lines="1"
            android:layout_toStartOf="@id/iv_arrow"
            android:textColor="@color/text_accent_dark"
            android:textSize="@dimen/medium_text"
            android:layout_marginStart="@dimen/medium_spacing"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cv"
            android:text="扫皇家金泽糖语手机系列包装"
            android:textColor="@color/text_default_dark"
            android:textSize="@dimen/medium_text"
            android:layout_below="@id/tv_name"
            android:lines="2"
            android:layout_toStartOf="@id/iv_arrow"
            android:layout_marginTop="@dimen/s_small_spacing"
            android:layout_marginStart="@dimen/medium_spacing"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_arrow_right"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



</RelativeLayout>